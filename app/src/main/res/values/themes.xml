<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>



    </style>

    <style name="Theme.ToDoList" parent="Base.Theme.ToDoList" />

    <style name="Toolbar.TitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar_ExpandedTitleTextAppearance_Big">
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>