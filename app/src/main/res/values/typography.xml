<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LargeTitle" parent="BaseText">
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Title" parent="BaseText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SubTitle" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DefaultText" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button" parent="BaseText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body" parent="BaseText">
        <item name="android:textSize">16sp</item>
    </style>

</resources>