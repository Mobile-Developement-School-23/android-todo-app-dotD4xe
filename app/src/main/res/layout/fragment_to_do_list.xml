<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F6F2"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true"
        android:fitsSystemWindows="true"
        android:theme="@style/Base.Theme.ToDoList">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:title="Мои дела"
            app:expandedTitleMarginStart="67dp"
            app:expandedTitleMarginBottom="60dp"
            app:expandedTitleTextAppearance="@style/Toolbar_ExpandedTitleTextAppearance_Big"
            app:collapsedTitleTextAppearance="@style/Toolbar.TitleTextAppearance"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|enterAlwaysCollapsed"
            app:titleEnabled="true"
            app:contentScrim="#F7F6F2">

            <View
                android:id="@+id/expandedImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#F7F6F2"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:alpha="0.3"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="67dp"
                android:paddingBottom="20dp"
                android:layout_gravity="bottom"
                android:textColor="@color/black"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/black"
                android:elevation="8dp"
                app:titleTextAppearance="@style/Toolbar.TitleTextAppearance"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="pin" >
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F6F2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingBottom="30dp"
            android:layout_marginEnd="10dp" />

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>